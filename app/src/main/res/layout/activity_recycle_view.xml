<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/master_container_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/animal_background_color"
    tools:context=".RecycleViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="24dp"
            android:minHeight="24dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/activity_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_head" />

        <TextView
            android:id="@+id/activity_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/atma_semibold"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="Planet"
            android:textColor="#fff"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/master_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@color/animal_background_color"
        android:layoutAnimation="@anim/recycle_layout_animation"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/animal_list_back_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/temparylistback"
        android:scaleType="fitXY" />

</FrameLayout>