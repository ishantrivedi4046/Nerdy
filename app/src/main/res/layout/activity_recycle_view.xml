<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/master_container_frame"
    android:layout_width="match_parent"
    android:background="@color/animal_background_color"
    android:layout_height="match_parent"
    tools:context=".RecycleViewActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/master_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/recycle_layout_animation"
        android:background="@color/animal_background_color"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/animal_list_back_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
</FrameLayout>